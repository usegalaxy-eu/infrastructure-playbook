server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name test.usegalaxy.eu;

	location / {
		proxy_pass http://test.internal.usegalaxy.eu/;
	}
}


server {
	listen 443 ssl;
	listen [::]:443 ssl;

	error_log /var/log/nginx/interactive-err.log;
	access_log /var/log/nginx/interactive-out.log;

	server_name ~^(?<key>[0-9a-f-]*)\.interactivetoolentrypoint\.interactivetool\.test\.usegalaxy\.eu$;

	# No clue why this doesn't work with "location /" unlike every other instance of that???
	location ~ ^(/.*) {
		proxy_pass http://$key.interactivetoolentrypoint.interactivetool.test.internal.usegalaxy.eu$1;
	}

	# belw√º is slow.
	resolver 8.8.8.8 8.8.4.4 valid=300s;
	resolver_timeout 5s;
}
