[[inputs.procstat]]
	cgroup = "systemd/system.slice/system-galaxy\\x2dgunicorn.slice/galaxy-gunicorn@{{ zerg }}.service"
	process_name = "galaxy-gunicorn@{{ gunicorn }}"
	cmdline_tag = true
{% endfor %}

