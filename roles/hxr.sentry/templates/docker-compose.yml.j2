---
version: '2'
services:
  base:
    restart: unless-stopped
    user: '999'
    image: sentry-onpremise:latest
    environment:
      SENTRY_USE_SSL: 1
      SENTRY_MEMCACHED_HOST: memcached
      SENTRY_REDIS_HOST: redis
      SENTRY_POSTGRES_HOST: postgres
      SENTRY_EMAIL_HOST: smtp
      SENTRY_SECRET_KEY: '{{ hxr_sentry_secret_key }}'
      GITHUB_APP_ID: '{{ hxr_sentry_github_app_id }}'
      GITHUB_API_SECRET: '{{ hxr_sentry_github_api_secret }}'
    volumes:
      - {{ hxr_sentry_datadir }}/sentry:/var/lib/sentry/files
  smtp:
    restart: unless-stopped
    image: tianon/exim4



  memcached:
    restart: unless-stopped
    image: memcached:1.4
  redis:
    restart: unless-stopped
    image: redis:3.2-alpine
  postgres:
    restart: unless-stopped
    user: '999'
    image: postgres:9.5
    volumes:
      - {{ hxr_sentry_datadir }}/postgres:/var/lib/postgresql/data
  web:
    restart: unless-stopped
    user: '999'
    extends: base
    links:
      - redis
      - postgres
      - memcached
      - smtp
    ports:
      - '127.0.0.1:8080:9000'
    environment:
      SENTRY_USE_SSL: 1
      SENTRY_SECRET_KEY: '{{ hxr_sentry_secret_key }}'
      GITHUB_APP_ID: '{{ hxr_sentry_github_app_id }}'
      GITHUB_API_SECRET: '{{ hxr_sentry_github_api_secret }}'
  cron:
    restart: unless-stopped
    user: '999'
    extends: base
    command: run cron
    links:
      - redis
      - postgres
      - memcached
      - smtp
  worker:
    restart: unless-stopped
    user: '999'
    extends: base
    command: run worker
    links:
      - redis
      - postgres
      - memcached
      - smtp
    environment:
      SENTRY_USE_SSL: 1
      SENTRY_SECRET_KEY: '{{ hxr_sentry_secret_key }}'
      GITHUB_APP_ID: '{{ hxr_sentry_github_app_id }}'
      GITHUB_API_SECRET: '{{ hxr_sentry_github_api_secret }}'
