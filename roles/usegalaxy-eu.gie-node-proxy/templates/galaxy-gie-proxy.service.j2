[Unit]
Description=Galaxy GIE NodeJS Proxy
After=network.target
After=time-sync.target

[Service]
UMask=022
Type=simple
User=galaxy
Group=galaxy
WorkingDirectory={{ galaxy_root }}/node-proxy
TimeoutStartSec=5
ExecStart={{ galaxy_root }}/venv/bin/node lib/main.js --ip 127.0.0.1 --port 8800 --sessions {{ galaxy_mutable_config_dir }}/interactivetools_map.sqlite --cookie galaxysession --verbose
MemoryLimit=4G
Restart=always
StartLimitIntervalSec=0
RestartSec=1

MemoryAccounting=yes
CPUAccounting=yes
BlockIOAccounting=yes

[Install]
WantedBy=multi-user.target
